<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Kate Lin의 다이어리 - @ViewData["title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nanum+Gothic+Coding:400,700&amp;subset=korean">
    <link rel="stylesheet" href="/Content/css/Loader.css">
    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)
</head>

<body style="font-family: 'Nanum Gothic Coding', monospace;">
    <nav class="navbar navbar-light navbar-expand-md" style="box-shadow: 0px 0px 20px rgb(204,204,204);font-family: 'Nanum Gothic Coding', monospace;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Kate Lin's Diary</a><button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a class="nav-link active" href="/">&lt;Home/&gt;</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/Post">&lt;Post/&gt;</a></li>
                    <li class="nav-item dropdown show" hidden="@(!Convert.ToBoolean(Session["isAuthed"]))">
                        <a class="dropdown-toggle nav-link" data-toggle="dropdown" aria-expanded="true" href="#">&lt;/Account&gt;</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/Write">글 쓰기</a>
                            <div class="dropdown-divider"></div><a class="dropdown-item" onclick="$('.loader').attr('hidden', false); $.post('api/logout', function() {location.reload();});" style="color: var(--danger);">로그아웃</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        @RenderBody()
    </div>
    <div class="text-center" style="padding: 20px;">
        <p>2021 Kate Lin</p>
        <p style="margin-top: -17px;margin-bottom: 0px;">Made with&nbsp;♥&nbsp;in Korea<br></p>
    </div>

    <div class="loader loader-default is-active" hidden="hidden"></div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>